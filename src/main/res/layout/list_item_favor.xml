<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="200dp"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/item_back"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_height="185dp"
            android:background="@drawable/stillhave"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daysstillhave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:text="2" />

            <TextView
                android:id="@+id/daysonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Days Only"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight = "10dp"

                    app:srcCompat="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop = "2dp"
                        android:text="IVAPP 2021 : 12th International Conference on Information Visualization Theory and Applications"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:gravity="start|top"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginVertical="5dp">

                        <TextView
                            android:id="@+id/item_method"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" Online Sreaming"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            app:drawableLeftCompat="@drawable/ic_pin" />

                        <TextView
                            android:id="@+id/item_state"
                            android:layout_gravity="center_vertical"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/state_safe"
                            android:textColor="@color/white"
                            android:text="@string/safe"
                            android:textSize="10sp"
                            tools:ignore="RtlCompat,SmallSp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/subtitel"
                            android:layout_width="95dp"
                            android:layout_height="30dp"
                            android:text="Submission Deadline: "
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/item_subdeadline"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:text="Oct 29, 2020"
                            android:textAlignment="textEnd"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_height="0.5dip"
                android:background="#686868"
                android:layout_width="match_parent"
                android:layout_marginVertical="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                            <TextView
                                android:id="@+id/c1"
                                android:paddingVertical="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/category_btn"
                                android:text="@string/menu_artificial_intelligence"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/heavy_gray"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/c2"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingVertical="1dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:maxWidth="130sp"
                                android:background="@drawable/category_btn"
                                android:text="@string/menu_information_technology"
                                android:textAlignment="center"
                                android:textColor="@color/heavy_gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/c3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingVertical="1dp"
                                android:maxWidth="130sp"
                                android:background="@drawable/category_btn"
                                android:text="1235645666666"
                                android:textAlignment="center"
                                android:textColor="@color/heavy_gray"
                                android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageButton
                        android:id="@+id/btn_share"
                        android:src="@drawable/ic_share"
                        android:background = "#ffffff"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        />
                    <ImageButton
                        android:id="@+id/btn_favorite"
                        android:src="@drawable/ic_favorite_chosen"
                        android:background = "#ffffff"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

